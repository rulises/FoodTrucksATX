*
  margin 0px
  padding 0px
  border 0px

body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

.description
  font-weight 300

.wrapper
  width 770px
  margin 50px auto

.app
  width 750px
  padding 10px
  background rgba(230, 230, 230, 0.45)
  text-align center
  color #999
  font-size 24px
  font-weight 300
  line-height 390px
  margin 10px auto
  position relative
  -webkit-border-radius 3px
  -moz-border-radius 3px
  border-radius 3px

#map
  width 750px
  height 420px
  background transparent

.infobox
  background #FFF
  width 320px
  padding 40px
  line-height 30px
  text-align center
  position absolute
  top 150px
  left 175px
  z-index 10000
  visibility hidden
  opacity 0
  filter alpha(opacity=0)
  box-shadow 0 0 4px 0 #AAAAAA
  -webkit-transition opacity .2s ease-out
  -moz-transition opacity .2s ease-out
  transition opacity .2s ease-out
  -webkit-border-radius 3px
  -moz-border-radius 3px
  border-radius 3px
  &.error
    opacity .9
    filter alpha(opacity=90)
    visibility visible

.leaflet-popup-content
  font 12px 'Lato', Arial, sans-serif !important

.leaflet-control-attribution
  &.leaflet-control
    display none

